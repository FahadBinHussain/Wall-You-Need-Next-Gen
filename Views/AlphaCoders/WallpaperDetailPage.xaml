<Page
    x:Class="Aura.Views.AlphaCoders.WallpaperDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aura.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Remove the dedicated row for the title -->
            <!-- <RowDefinition Height="Auto"/> -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Remove TitleTextBlock from here -->
        <!--
        <TextBlock x:Name="TitleTextBlock"
                   Grid.Row="0"
                   Text="Wallpaper Title"
                   FontSize="24"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="10,10,10,0"/>
        -->

        <!-- ScrollViewer is now in Grid.Row=0 -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="20" Spacing="10">

                <!-- TitleTextBlock -->
                <TextBlock x:Name="TitleTextBlock"
                           Text="Wallpaper Title"
                           FontSize="24"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>

                <!-- Debug TextBlock for Big Thumb URL -->
                <TextBlock x:Name="DebugBigThumbTextBlock"
                           Text="Big Thumb URL: Loading..."
                           FontSize="12"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Foreground="Gray"
                           Margin="0,5,0,10"/>

                <!-- This section is now replaced by the Wallpaper Image Container with Overlay Buttons below -->

                <!-- Wallpaper Image Container with Buttons Below -->
                <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      CornerRadius="12"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="0.5"
                      Margin="0"
                      Padding="0"
                      HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Image Container with Tags -->
                    <Grid Grid.Row="0">
                        <!-- Wallpaper Image -->
                        <Image x:Name="WallpaperImage"
                               Source="ms-appx:///Assets/placeholder-wallpaper-1000.png"
                               Stretch="Uniform"
                               CacheMode="BitmapCache"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               MaxHeight="800"
                               MaxWidth="1200"/>

                        <!-- Tag Overlays -->
                        <Grid Margin="0" Padding="0">
                            <!-- Quality Tag - Top Left -->
                            <Border x:Name="QualityTagBorder"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="0"
                                    Padding="0"
                                    Visibility="Collapsed">
                                <Image x:Name="QualityImage" Width="90" Height="54" Margin="0" HorizontalAlignment="Left"/>
                            </Border>

                            <!-- AI Tag - Top Right -->
                            <Border x:Name="AITagBorder"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,0,8,0"
                                    Padding="0"
                                    Visibility="Collapsed">
                                <Image x:Name="AIImage"
                                       Source="ms-appx:///Assets/aigenerated-icon.png"
                                       Width="40" Height="40" Margin="0"/>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Action Buttons Below Image -->
                    <Grid Grid.Row="1"
                          Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="0,0.5,0,0"
                          Padding="10">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0"
                                    Spacing="15">

                                    <!-- Set As Wallpaper Button with Flyout -->
                                    <Button x:Name="SetAsWallpaperButton"
                                            Background="Transparent"
                                            BorderBrush="Transparent">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Set as Desktop Wallpaper" Click="SetAsDesktopWallpaperItem_Click">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE2B1;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Set as Lock Screen" Click="SetAsLockScreenItem_Click">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE72E;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE136;" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="Set" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>
                                    <!-- Download Button -->
                                    <Button x:Name="DownloadButton"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="DownloadButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE74E;" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="Download" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- View on Web Button -->
                                    <Button x:Name="ViewOnWebButton"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="ViewOnWebButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE774;" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="View on Web" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Buttons removed as requested -->
                                </StackPanel>
                            </Grid>
                        </Grid>




            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
