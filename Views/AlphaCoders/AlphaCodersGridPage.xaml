<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Wall_You_Need_Next_Gen.Views.AlphaCoders.AlphaCodersGridPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wall_You_Need_Next_Gen.Views"
    xmlns:models="using:Wall_You_Need_Next_Gen.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <!-- Custom converters -->
        <local:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar with title and debug button -->
        <Grid Grid.Row="0" Margin="24,24,24,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Alpha Coders Wallpapers"
                       Style="{StaticResource TitleTextBlockStyle}"
                       VerticalAlignment="Center"/>

            <Button x:Name="DebugButton"
                    Grid.Column="1"
                    Content="Debug Scraper"
                    Background="#FF5733"
                    Foreground="White"
                    Padding="15,8"
                    CornerRadius="4"
                    Click="DebugButton_Click"
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- Wallpaper grid with adaptive layout -->
        <ScrollViewer x:Name="MainScrollViewer"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      ViewChanged="MainScrollViewer_ViewChanged"
                      Padding="0"
                      Margin="0">

            <GridView x:Name="WallpapersGridView"
                     Margin="12,8,12,12"
                     SelectionMode="None"
                     IsItemClickEnabled="True"
                     ItemClick="WallpapersGridView_ItemClick"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     ContainerContentChanging="WallpapersGridView_ContainerContentChanging">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="4"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Width" Value="Auto"/>
                        <Setter Property="Height" Value="Auto"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </GridView.ItemContainerStyle>

                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid x:Name="WallpapersWrapGrid"
                                     Orientation="Horizontal"
                                     HorizontalAlignment="Stretch"
                                     ItemWidth="NaN"
                                     ItemHeight="NaN"
                                     SizeChanged="WallpapersWrapGrid_SizeChanged"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:WallpaperItem">
                        <Grid>
                            <!-- Wallpaper Image Container -->
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  CornerRadius="8"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="0.5">

                                <!-- Wallpaper Image -->
                                <Image Source="{x:Bind ImageSource, Mode=OneWay}"
                                       Stretch="UniformToFill"
                                       CacheMode="BitmapCache"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                                <!-- Tag Overlays -->
                                <Grid>
                                    <!-- Quality Tag - Top Left -->
                                    <Border HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Margin="8,8,0,0"
                                            Visibility="{x:Bind QualityTag, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                                        <Image Source="{x:Bind QualityLogoPath, Mode=OneWay}"
                                               Width="60" Height="36"/>
                                    </Border>

                                    <!-- AI Tag - Top Right -->
                                    <Border HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,8,8,0"
                                            Visibility="{x:Bind IsAI, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Image Source="ms-appx:///Assets/aigenerated-icon.png"
                                               Width="24" Height="24"/>
                                    </Border>

                                    <!-- Stats Overlay - Bottom -->
                                    <Border HorizontalAlignment="Stretch"
                                            VerticalAlignment="Bottom"
                                            Background="#66000000"
                                            Padding="8,4">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <!-- Likes -->
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon FontFamily="Segoe Fluent Icons"
                                                          Glyph="&#xE00B;"
                                                          FontSize="12"
                                                          Foreground="White"/>
                                                <TextBlock Text="{x:Bind Likes, Mode=OneWay}"
                                                           Foreground="White"
                                                           FontSize="12"/>
                                            </StackPanel>

                                            <!-- Downloads -->
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon FontFamily="Segoe Fluent Icons"
                                                          Glyph="&#xE118;"
                                                          FontSize="12"
                                                          Foreground="White"/>
                                                <TextBlock Text="{x:Bind Downloads, Mode=OneWay}"
                                                           Foreground="White"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>

        <!-- Loading indicator -->
        <ProgressBar x:Name="LoadingProgressBar"
                     Grid.Row="1"
                     VerticalAlignment="Bottom"
                     IsIndeterminate="True"
                     Visibility="Collapsed"/>
    </Grid>
</Page>
