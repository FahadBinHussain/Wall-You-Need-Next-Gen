<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Wall_You_Need_Next_Gen.Views.WallpaperCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wall_You_Need_Next_Gen.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="320">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image x:Name="WallpaperImage" Stretch="UniformToFill" />
        
        <Grid VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,8,8,0">
            <Border Background="#99000000" CornerRadius="4" Padding="8,4">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Image x:Name="ResolutionImage" Width="12" Height="12" />
                    <TextBlock x:Name="ResolutionText" Foreground="White" FontWeight="SemiBold" />
                </StackPanel>
            </Border>
        </Grid>
        
        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8,8,0,0" x:Name="AIBadge" Visibility="Collapsed">
            <Border Background="#99000000" CornerRadius="4" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <Image Source="ms-appx:///Assets/aigenerated-icon.png" Width="12" Height="12" Margin="0,0,4,0" />
                    <TextBlock Text="AI" Foreground="White" FontWeight="SemiBold" />
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Background="#22000000" Padding="8,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="1" Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon Glyph="&#xE19F;" FontSize="12" />
                    <TextBlock x:Name="LikesText" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon Glyph="&#xE118;" FontSize="12" />
                    <TextBlock x:Name="DownloadsText" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 