<Page
    x:Class="Wall_You_Need_Next_Gen.Views.WallpaperDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wall_You_Need_Next_Gen.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Remove the dedicated row for the title -->
            <!-- <RowDefinition Height="Auto"/> --> 
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Remove TitleTextBlock from here -->
        <!-- 
        <TextBlock x:Name="TitleTextBlock" 
                   Grid.Row="0"
                   Text="Wallpaper Title" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="10,10,10,0"/>
        -->
        
        <!-- ScrollViewer is now in Grid.Row=0 -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="20" Spacing="10"> 
                
                <!-- TitleTextBlock -->
                <TextBlock x:Name="TitleTextBlock" 
                           Text="Wallpaper Title" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                
                <!-- This section is now replaced by the Wallpaper Image Container with Overlay Buttons below -->
                
                <!-- Wallpaper Image Container with Buttons Below -->
                <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      CornerRadius="12"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="0.5"
                      Margin="0"
                      Padding="0"
                      HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Image Container with Tags -->
                    <Grid Grid.Row="0">
                        <!-- Wallpaper Image -->
                        <Image x:Name="WallpaperImage" 
                               Source="ms-appx:///Assets/placeholder-wallpaper-1000.jpg"
                               Stretch="Uniform" 
                               CacheMode="BitmapCache"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               MaxHeight="800" 
                               MaxWidth="1200"/>
                                
                        <!-- Tag Overlays -->
                        <Grid Margin="0" Padding="0">
                            <!-- Quality Tag - Top Left -->
                            <Border x:Name="QualityTagBorder" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top"
                                    Margin="0"
                                    Padding="0"
                                    Visibility="Collapsed">
                                <Image x:Name="QualityImage" Width="90" Height="54" Margin="0" HorizontalAlignment="Left"/>
                            </Border>
                                    
                            <!-- AI Tag - Top Right -->
                            <Border x:Name="AITagBorder"
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Top"
                                    Margin="0,0,8,0"
                                    Padding="0"
                                    Visibility="Collapsed">
                                <Image x:Name="AIImage" 
                                       Source="ms-appx:///Assets/aigenerated-icon.png"
                                       Width="40" Height="40" Margin="0"/>
                            </Border>
                        </Grid>
                    </Grid>
                    
                    <!-- Action Buttons Below Image -->
                    <Grid Grid.Row="1" 
                          Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="0,0.5,0,0"
                          Padding="10">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0" 
                                    Spacing="15">
                                    
                                    <!-- Set As Wallpaper Button -->
                                    <Button x:Name="SetAsWallpaperButton"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="SetAsWallpaperButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE136;" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="Set" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Save Button -->
                                    <Button Background="Transparent" BorderBrush="Transparent">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE74E;" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="Save" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Like Button -->
                                    <Button Background="Transparent" BorderBrush="Transparent">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE19F;" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="Like" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Share Button -->
                                    <Button Background="Transparent" BorderBrush="Transparent">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE72D;" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="Share" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Add to favorites Button -->
                                    <Button Background="Transparent" BorderBrush="Transparent">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE734;" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="Add to favorites" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Menu Button -->
                                    <Button Background="Transparent" BorderBrush="Transparent">
                                        <FontIcon Glyph="&#xE712;" FontSize="14" Foreground="Black"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                
                <!-- Publisher Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0.5"
                        CornerRadius="8"
                        Margin="0,10,0,5"
                        HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Publisher Header -->
                        <Border Grid.Row="0" 
                                Padding="12,10,12,10" 
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                BorderThickness="0,0,0,0.5">
                            <TextBlock Text="Publisher" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </Border>
                        
                        <!-- Publisher Content -->
                        <Grid Grid.Row="1" Padding="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Publisher Image -->
                            <Ellipse Grid.Row="0" 
                                     x:Name="PublisherProfileEllipse"
                                     Width="100" Height="100" 
                                     HorizontalAlignment="Center" 
                                     Margin="0,0,0,15">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#1E3A8A" Offset="0.0"/>
                                        <GradientStop Color="#2563EB" Offset="1.0"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- Wolf Silhouette -->
                            <Path Grid.Row="0"
                                  x:Name="PublisherProfileIcon"
                                  Data="M50,65 C48,55 45,50 50,45 C55,50 52,55 50,65 M40,75 C38,55 42,40 50,30 C58,40 62,55 60,75 C55,70 45,70 40,75" 
                                  Fill="Black" 
                                  Opacity="0.6"
                                  Width="40"
                                  Height="40"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,15"/>
                            
                            <!-- Publisher Name -->
                            <TextBlock Grid.Row="1" 
                                       x:Name="PublisherNameTextBlock"
                                       Text="Milan E." 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            
                            <!-- Publisher Info -->
                            <TextBlock Grid.Row="2" 
                                       x:Name="PublisherInfoTextBlock"
                                       Text="Gender: Male · Age: 21 · Country: Private" 
                                       FontSize="12" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>
                            
                            <!-- Action Buttons -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Follow Button -->
                                <Button Grid.Column="0" 
                                        Content="Follow" 
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        Margin="0,0,5,0"
                                        Background="{ThemeResource SystemAccentColor}"
                                        Foreground="White"/>
                                
                                <!-- More Button -->
                                <Button Grid.Column="1" 
                                        Content="More" 
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        Margin="5,0,0,0"
                                        Background="{ThemeResource SystemAccentColor}"
                                        Foreground="White"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Statistics Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0.5"
                        CornerRadius="8"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Stretch">
                    <Grid>
                        <!-- Stats Container -->
                        <Grid Padding="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Uploads Stat -->
                            <StackPanel Grid.Column="0" 
                                        Padding="10,15,10,15" 
                                        HorizontalAlignment="Center" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        BorderThickness="0,0,0.5,0">
                                <TextBlock x:Name="UploadsTextBlock"
                                           Text="172" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Uploads" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Likes Stat -->
                            <StackPanel Grid.Column="1" 
                                        Padding="10,15,10,15" 
                                        HorizontalAlignment="Center"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        BorderThickness="0,0,0.5,0">
                                <TextBlock x:Name="LikesTextBlock"
                                           Text="21587" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Likes" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Followers Stat -->
                            <StackPanel Grid.Column="2" 
                                        Padding="10,15,10,15" 
                                        HorizontalAlignment="Center">
                                <TextBlock x:Name="FollowersTextBlock"
                                           Text="64" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Followers" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>