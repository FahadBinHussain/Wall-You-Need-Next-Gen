<Page
    x:Class="Wall_You_Need_Next_Gen.Views.WallpaperDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wall_You_Need_Next_Gen.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Remove the dedicated row for the title -->
            <!-- <RowDefinition Height="Auto"/> --> 
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Remove TitleTextBlock from here -->
        <!-- 
        <TextBlock x:Name="TitleTextBlock" 
                   Grid.Row="0"
                   Text="Wallpaper Title" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="10,10,10,0"/>
        -->
        
        <!-- ScrollViewer is now in Grid.Row=0 -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="20" Spacing="10"> 
                
                <!-- TitleTextBlock -->
                <TextBlock x:Name="TitleTextBlock" 
                           Text="Wallpaper Title" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                
                <!-- Copied and adapted structure from LatestWallpapersPage DataTemplate -->
                 <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="12"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="0.5"
                       Margin="0"
                       Padding="0"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top"> 
                            
                    <!-- Wallpaper Image Container -->
                    <Image x:Name="WallpaperImage" 
                           Source="ms-appx:///Assets/placeholder-wallpaper-1000.jpg"
                           Stretch="Uniform" 
                           CacheMode="BitmapCache"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           MaxHeight="800" 
                           MaxWidth="1200"/>
                            
                    <!-- Tag Overlays -->
                    <Grid Margin="0" Padding="0">
                        <!-- Quality Tag - Bottom Right (Changed from Top Left) -->
                        <Border x:Name="QualityTagBorder" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Bottom"
                                Margin="0,0,140,8"
                                Padding="0"
                                Visibility="Collapsed">
                            <!-- Note: Need x:Name for QualityImage if code-behind sets it -->
                            <Image x:Name="QualityImage" Width="40" Height="40" Margin="0" HorizontalAlignment="Left"/> 
                        </Border>
                                
                        <!-- AI Tag - Top Right -->
                        <Border x:Name="AITagBorder"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Margin="0,0,8,0"
                                Padding="0"
                                Visibility="Collapsed">
                            <!-- Note: Need x:Name for AIImage if code-behind sets it -->
                            <Image x:Name="AIImage" 
                                   Source="ms-appx:///Assets/aigenerated-icon.png"
                                   Width="40" 
                                   Height="40" 
                                   Margin="0"/>
                        </Border>
                                
                        <!-- Stats Container (Bottom Right) integrated with card -->
                        <Border CornerRadius="0,0,12,0" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Bottom"
                                Margin="0"
                                Background="#66000000" 
                                Padding="10,6">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <!-- Likes -->
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock x:Name="LikesText" 
                                                Text="0" 
                                                Foreground="White" 
                                                FontSize="14" 
                                                FontWeight="SemiBold"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" 
                                                Glyph="&#xEB52;" 
                                                FontSize="14" 
                                                Foreground="White"/>
                                </StackPanel>
                                        
                                <!-- Downloads -->
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock x:Name="DownloadsText" 
                                                Text="0" 
                                                Foreground="White" 
                                                FontSize="14" 
                                                FontWeight="SemiBold"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" 
                                                Glyph="&#xE896;" 
                                                FontSize="14" 
                                                Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 