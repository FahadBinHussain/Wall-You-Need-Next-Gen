<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Wall_You_Need_Next_Gen.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wall_You_Need_Next_Gen.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="24,0,24,24" Spacing="24">
                <TextBlock Text="Home" Style="{StaticResource TitleTextBlockStyle}" Margin="0,24,0,0" />

                <!-- Latest Wallpapers Section -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Banner image with overlay text -->
                    <Grid MinHeight="300" MaxHeight="300">
                        <Image x:Name="LatestBannerImage" Stretch="UniformToFill" />
                        <Grid Background="#44000000" VerticalAlignment="Bottom" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Latest wallpapers" 
                                           Style="{StaticResource SubtitleTextBlockStyle}" 
                                           Foreground="White" 
                                           FontWeight="SemiBold" />
                                <TextBlock Text="The lastest wallpapers in one collection. You can find the freshest wallpapers here." 
                                           Foreground="White"
                                           TextWrapping="Wrap" 
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Two Column Grid for Other Categories -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- 8K UltraHD Wallpapers -->
                    <Grid Grid.Column="0" Margin="0,0,8,0" MinHeight="150" MaxHeight="150">
                        <Image x:Name="UltraHdImage" Stretch="UniformToFill" />
                        <Grid Background="#44000000" VerticalAlignment="Bottom" Padding="16">
                            <TextBlock Text="8K UltraHD wallpapers" 
                                       Style="{StaticResource BodyTextBlockStyle}" 
                                       Foreground="White" 
                                       FontWeight="SemiBold" />
                        </Grid>
                    </Grid>

                    <!-- AI Generated -->
                    <Grid Grid.Column="1" Margin="8,0,0,0" MinHeight="150" MaxHeight="150">
                        <Image x:Name="AiGeneratedImage" Stretch="UniformToFill" />
                        <Grid Background="#44000000" VerticalAlignment="Bottom" Padding="16">
                            <TextBlock Text="AI generated" 
                                       Style="{StaticResource BodyTextBlockStyle}" 
                                       Foreground="White" 
                                       FontWeight="SemiBold" />
                        </Grid>
                    </Grid>
                </Grid>

                <!-- AI Chat Widget Banner -->
                <Grid MinHeight="120" MaxHeight="120">
                    <Image x:Name="AiChatWidgetImage" Stretch="UniformToFill" />
                </Grid>

                <!-- Daily Popular Wallpapers Section -->
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Daily popular wallpapers" 
                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                   VerticalAlignment="Center" />
                        
                        <Button Grid.Column="1" Content="&#xE974;" 
                                FontFamily="Segoe MDL2 Assets" 
                                Background="Transparent" 
                                BorderThickness="0" />
                    </Grid>

                    <!-- Wallpaper Cards Grid -->
                    <ItemsRepeater x:Name="DailyWallpapersRepeater" Margin="0,12,0,0">
                        <ItemsRepeater.Layout>
                            <UniformGridLayout MinItemWidth="320" 
                                              MinItemHeight="200"
                                              MinRowSpacing="16" 
                                              MinColumnSpacing="16" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <local:WallpaperCard />
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 