<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Wall_You_Need_Next_Gen.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wall_You_Need_Next_Gen"
    xmlns:converters="using:Wall_You_Need_Next_Gen.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            
            <!-- Value Converters -->
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            
            <!-- App-wide Colors -->
            <SolidColorBrush x:Key="NavbarSelectedBgBrush" Color="#eaeaea"/>
            <SolidColorBrush x:Key="NavbarAccentBrush" Color="#FF5733"/>
            <SolidColorBrush x:Key="NavbarIconBrush" Color="#FF5733"/>
            <SolidColorBrush x:Key="NavbarTextBrush" Color="#6C757D"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
