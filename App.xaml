<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Aura.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aura"
    xmlns:converters="using:Aura.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            
            <!-- Value Converters -->
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            
            <!-- App-wide Colors -->
            <SolidColorBrush x:Key="NavbarSelectedBgBrush" Color="#eaeaea"/>
            <SolidColorBrush x:Key="NavbarAccentBrush" Color="#FF5733"/>
            <SolidColorBrush x:Key="NavbarIconBrush" Color="#FF5733"/>
            <SolidColorBrush x:Key="NavbarTextBrush" Color="#6C757D"/>
            <SolidColorBrush x:Key="NavbarSelectedTextBrush" Color="#191919"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
